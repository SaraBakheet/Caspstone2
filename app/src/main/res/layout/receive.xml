<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:backgroundTint="#8F8787">

    <ImageView
        android:id="@+id/receiver_cam"
        android:layout_width="247dp"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/cam" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_background"
        android:backgroundTint="#705A5A">


        <TextView
            android:id="@+id/txt_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_shape"
            android:backgroundTint="#48A878"
            android:padding="10dp"
            android:text="this is sent message "
            android:textColor="#FFFfff"
            android:textSize="18sp"


            />



    </RelativeLayout>


</RelativeLayout>



