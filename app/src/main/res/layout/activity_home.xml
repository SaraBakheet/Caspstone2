<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3B1B1"
    android:backgroundTint="#F4E7E7"
    android:backgroundTintMode="screen"
    tools:context=".home">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_width="414dp"
        android:layout_height="635dp"
        android:background="#0F8A8282"
        android:backgroundTint="#68656E"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312"
        tools:listitem="@layout/user_layout" />

    <ImageView
        android:id="@+id/chat1"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userRecyclerView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/chat" />

    <ImageView
        android:id="@+id/profile1"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toEndOf="@+id/chat1"
        app:layout_constraintTop_toBottomOf="@+id/userRecyclerView"
        app:layout_constraintVertical_bias="0.195"
        app:srcCompat="@drawable/profile1" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="51dp"
        android:layout_height="58dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/setting" />
</androidx.constraintlayout.widget.ConstraintLayout>







